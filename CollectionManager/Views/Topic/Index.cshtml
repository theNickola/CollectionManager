@using CollectionManager.Models.Domain;
@model IEnumerable<Topic>
@{
    ViewData["Title"] = "Topics";
}
<h1>@ViewData["Title"]</h1>
<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-dark" href="/Topic/Add">Add @ViewData["Title"]</a>
            
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <br />
            <table class="table table-striped table-bordered table-light">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>
                                <a class="btn btn-success" href="/Topic/Update?id=@item.Id">Edit</a>
                                <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Topic/Delete?id=@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>