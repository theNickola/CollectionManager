@model IEnumerable<CollectionManager.Models.Domain.Collection>
@{
    ViewData["Title"] = "All collections";
}
<h1>@ViewData["Title"]</h1>
<h6>by Autor @ViewBag.UserName</h6>

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-dark" href="/UserCollections/Add?userName=@ViewBag.UserName">Add more</a>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12">
            @if (TempData["msg"] != null)
            {
                <div class="text-primary">
                    @TempData["msg"]
                </div>
            }
            <table class="table table-striped table-bordered table-light">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Author</th>
                        <th>Topic</th>
                        <th class="text-center" colspan="3">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.User.Name</td>
                            <td>@item.Topic.Name</td>
                            <td>
                                <a class="btn btn-primary" href="/UserCollections/Update?id=@item.Id" >Edit</a>
                            </td>
                            <td>
                                <a class="btn btn-success" href="/UserCollections/AddIthem?id=@item.Id">Add Ithem</a>
                            </td>
                            <td>
                                <a onclick="return window.confirm('Are you sure?')" href="/UserCollections/Delete?id=@item.Id&userName=@ViewBag.UserName">
                                    <img src="@Url.Content("/img/delete.ico")" alt="Delete" style="height: 30px">
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>